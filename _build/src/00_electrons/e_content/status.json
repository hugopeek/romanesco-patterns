{
    "package": {
        "elements": {
            "tvs": [
                {
                    "caption": "Progress indicator",
                    "name": "status_progress",
                    "description": "What is the current development stage of this page?",
                    "type": "option",
                    "category": "Status",
                    "sortOrder": 1,
                    "defaultValue": "not-done",
                    "inputOptionValues": "@CHUNK tvSelectOptionAlias@StatusProgress",
                    "templates": [
                        "@@templates_all"
                    ]
                },{
                    "caption": "Health indicator",
                    "name": "status_health",
                    "description": "What is the current condition of this page?",
                    "type": "option",
                    "category": "Status",
                    "sortOrder": 2,
                    "defaultValue": "stable",
                    "inputOptionValues": "@CHUNK tvSelectOptionAlias@StatusHealth",
                    "templates": [
                        "@@templates_all"
                    ]
                },{
                    "caption": "Improvements",
                    "name": "status_improvements",
                    "description": "How can the content of this page be improved? You can elaborate on this in the Notes section below, if needed.",
                    "type": "checkbox",
                    "category": "Status",
                    "sortOrder": 3,
                    "inputOptionValues": "@CHUNK tvSelectOptionAlias@StatusImprovements",
                    "outputProperties": {
                        "delimiter": ","
                    },
                    "display": "delim",
                    "templates": [
                        "@@templates_all"
                    ]
                },{
                    "caption": "Help!",
                    "name": "status_issues",
                    "description": "Indicate the nature of the problem(s) you are experiencing. You can explain it in more detail in the Notes section below. Please include any relevant info such as error messages there too.",
                    "type": "checkbox",
                    "category": "Status",
                    "sortOrder": 4,
                    "inputOptionValues": "@CHUNK tvSelectOptionAlias@StatusIssues",
                    "outputProperties": {
                        "delimiter": ","
                    },
                    "display": "delim",
                    "templates": [
                        "@@templates_all"
                    ]
                },{
                    "caption": "Assigned editor",
                    "name": "status_assigned_user",
                    "description": "Who is responsible for editing and maintaining this page?",
                    "type": "listbox",
                    "category": "Status",
                    "sortOrder": 10,
                    "inputOptionValues": "@SELECT '' AS name, '' AS username UNION ALL ( SELECT `username` AS `name`,`username` FROM `modx_users` WHERE `active` = 1 )",
                    "templates": [
                        "@@templates_all"
                    ]
                },{
                    "caption": "Due date",
                    "name": "planning_date_completed",
                    "description": "",
                    "type": "date",
                    "category": "Status",
                    "sortOrder": 20,
                    "templates": [
                        "@@templates_all"
                    ]
                }
            ]
        }
    }
}