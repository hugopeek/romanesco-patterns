                    "description": "Enable or disable comments.",
                    "type": "option",
                    "inputOptionValues": "Active==1||Disabled==0",
                    "category": "Comments",
                    "sortOrder": "1",
                    "templates": [
                        "ArticleTraditional",
                        "ArticleReadability",
                        "ArticleSidenotes",
                        "Article - Traditional",
                        "Article - Readability",
                        "Article - Sidenotes"
                    ]
                },{
                    "caption": "Client",
