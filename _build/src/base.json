{
    "name": "Romanesco",
    "lowCaseName": "romanesco",
    "description": "Romanesco is an engineering toolkit that combines the atomic design philosophy with MODX templating.",
    "author": "Hugo Peek",
    "version": "1.0.0-beta5",

    "package": {
        "elements": {
            "categories": [
                {
                    "name": "00_electrons"
                },{
                    "name": "01_atoms"
                },{
                    "name": "02_molecules"
                },{
                    "name": "03_organisms"
                },{
                    "name": "04_templates"
                },{
                    "name": "06_formulas"
                },{
                    "name": "07_computations"
                }
            ]
        },

        "systemSettings": [
            {
                "key": "semantic_dist_path",
                "type": "textfield",
                "area": "Paths",
                "value": "assets/semantic/dist"
            },{
                "key": "semantic_css_path",
                "type": "textfield",
                "area": "Paths",
                "value": "assets/semantic/dist/themes/romanesco/assets/css"
            },{
                "key": "semantic_js_path",
                "type": "textfield",
                "area": "Paths",
                "value": "assets/semantic/dist/themes/romanesco/assets/js"
            },{
                "key": "semantic_font_path",
                "type": "textfield",
                "area": "Paths",
                "value": "assets/semantic/dist/themes/romanesco/assets/fonts"
            },{
                "key": "semantic_vendor_path",
                "type": "textfield",
                "area": "Paths",
                "value": "assets/semantic/dist/themes/romanesco/assets/vendor"
            },{
                "key": "custom_css_path",
                "type": "textfield",
                "area": "Paths",
                "value": "assets/css"
            },{
                "key": "date_format_short",
                "type": "textfield",
                "area": "Date and Time",
                "value": "%d-%m-%Y"
            },{
                "key": "date_format_medium",
                "type": "textfield",
                "area": "Date and Time",
                "value": "%e %b %Y"
            },{
                "key": "date_format_long",
                "type": "textfield",
                "area": "Date and Time",
                "value": "%e %B %Y"
            },{
                "key": "date_format_full",
                "type": "textfield",
                "area": "Date and Time",
                "value": "%A %e %B, %Y"
            },{
                "key": "title_format",
                "type": "textfield",
                "area": "Head",
                "value": "[[*longtitle:empty=`[[*pagetitle]]`]] - [[++site_name]]"
            },{
                "key": "htpasswd_user",
                "type": "textfield",
                "area": "Development"
            },{
                "key": "htpasswd_pass",
                "type": "text-password",
                "area": "Development"
            },{
                "key": "dev_mode",
                "type": "combo-boolean",
                "area": "Development",
                "value": "0"
            }
        ]
    },

    "build": {
        "readme": "docs/readme.md",
        "license": "docs/license.md",
        "changelog": "docs/changelog.md"
    }
}