[[+image:notempty=`
<a href="[[+link]]" class="image">
    [[+image]]
</a>
`]]
<div class="content">
    [[+heading:notempty=`
    <[[+level]] class="header">
        <a href="[[+link]]">[[+heading]]</a>
    </[[+level]]>
    `]]
    [[+subtitle:notempty=`
    <div class="meta">[[+subtitle]]</div>
    `]]
    [[+content:notempty=`
    <div class="description">
        [[+content]]
    </div>
    `]]
</div>
[[+button_text:notempty=`
<a href="[[+link]]" class="ui [[+emphasize:eq=`1`:then=`large primary`]] button">[[+button_text]]</a>
`]]