<div class="item [[+idx:eq=`1`:then=`active`]]"
     data-tab="segment-[[+unique_idx]]-[[+idx]]"
     role="tab"
     aria-selected="false">
    <[[+level]] class="ui icon header">
        <img class="ui image" src="[[+icon]]">
        <div class="content">
            [[+heading]]
            [[+subtitle:notempty=`<span class="sub header">[[+subtitle]]</span>`]]
        </div>
    </[[+level]]>
</div>